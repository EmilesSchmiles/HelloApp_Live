# Stage 1: Build the Blazor WebAssembly app
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj first and restore (faster caching)
COPY *.csproj ./
RUN dotnet restore

# Copy the rest of the files
COPY . ./

# Publish Blazor WebAssembly app (outputs static files to /app/publish/wwwroot)
RUN dotnet publish -c Release -o /app/publish

# Stage 2: Serve with Nginx
FROM nginx:alpine AS final
WORKDIR /usr/share/nginx/html

# Remove default nginx contents
RUN rm -rf ./*

# Copy Blazor publish output to Nginx html directory
COPY --from=build /app/publish/wwwroot .

# Expose Render's port
EXPOSE 8080

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
