# Stage 1: Build the Blazor app
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy everything
COPY . .

# Publish Blazor app (outputs static files to /app/publish/wwwroot)
RUN dotnet publish -c Release -o /app/publish

# Stage 2: Use lightweight Nginx image to serve static content
FROM nginx:alpine AS final
WORKDIR /usr/share/nginx/html

# Remove default Nginx web files
RUN rm -rf ./*

# Copy Blazor publish output to Nginx html directory
COPY --from=build /app/publish/wwwroot .

# Expose Render port
EXPOSE 8080

# Set Nginx to listen on Render's port
CMD ["nginx", "-g", "daemon off;"]
